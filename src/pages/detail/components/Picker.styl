@import("../../../stylus/index.styl");
.picker 
    width: 100vw 
    height: 100vh
    background: rgba(0,0,0,0.5)
    position fixed
    left 0
    top: 0
    .con
        width: 100vw 
        height: 60vh
        overflow-y: auto
        background: $frontW
        position absolute
        left 0 
        bottom: 0        
        .img-parent
            width: 2rem 
            height: 2rem
            img
                width: 100% 
                height: 100%
        .spec-title
            font-size: $h1
            color: $orange
        .Btn
            overflow hidden
            span 
                float left
                padding $padding $margin 
                margin $margin 
                border 1px solid $front-color1
                color #000
                  background: $frontW

                font-size: $h2
            .select
                border 1px solid $orange
                color $orange
