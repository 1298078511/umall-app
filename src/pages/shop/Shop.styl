@import("../../stylus/index.styl");
.shop 
    margin-top: $marginUlLeft
    .item 
        width: 100vw
        overflow hidden
        line-height .3rem
        
        .inner
            width: 9rem
            height: 2rem 
            border: 1px solid $font-color3
            box-sizing: border-box
            overflow hidden
            margin: $margin 0
            transition: all 0.3s
            img 
                width: 0.3rem
                height: 0.3rem
                float left
                margin: $margin
            .Info   
                float left
                width: 6rem;
                font-size: .2rem
                   
            .InfoImg
               
                width: 1rem
                height: 1rem
            .del
                width: 1.8rem
                background: $orange 
                color: $frontW
                text-align: center
                line-height: 2rem
                float right
        .inner-show-del
            margin-left: -1.8rem
    .footer
        width: 100vw 
        height: $footerHeight 
        position fixed 
        background: $frontW
        left 0 
        bottom: $footerHeight 
        border-top: 1px solid $font-color3
        box-sizing: border-box
        img 
            width: 0.5rem
            height: 0.5rem
        .quanxuan 
            float left
            margin 0 $margin
        .edit 
            float left 
            margin 0 $margin
        .price 
            float left
            margin 0 $margin
.shopbtn
    width 0.4rem
    height 0.4rem
    margin  0 .1rem